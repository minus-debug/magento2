<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontOpenHomePageAndCheckMessageActionGroup">
        <annotations>
            <description>Upload page and check message.</description>
        </annotations>
        <arguments>
            <argument name="userInput" defaultValue="__prefix__Hello World__suffix" type="string"/>
        </arguments>
        <waitForElementVisible selector="{{StorefrontCheckHelloMessageSection.helloMessage}}" stepKey="waitWhenMessageBeVisible"/>
        <see selector="{{StorefrontCheckHelloMessageSection.helloMessage}}" userInput="{{userInput}}" stepKey="seeHelloMessage"/>
    </actionGroup>
</actionGroups>
