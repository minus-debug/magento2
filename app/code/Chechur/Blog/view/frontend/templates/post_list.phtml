                                    height="100"
                                    align="right"
                                >
                            <?php endif;?>
                            <p align="justify"><?= $escaper->escapeHtml($post->getPostContent()); ?></p><br>
                            <p align="right">
                                <?= $escaper->escapeHtml((string)__('Post created at: %1', $post->getCreatedAt())); ?>
                            </p><br>
                        </div>
                    <?php endforeach; ?>
                </div>
                <div class="blog-post-pager">
                    <?= $block->getChildHtml('blog.post.pager'); ?>
