?>
<h1><?= $escaper->escapeHtml($block->getBlockTitle()); ?></h1>
<div class="post-view">
    <div class="post-holder post-holder-<?= $escaper->escapeHtml($block->getId()); ?>">
        <div class="post-content">
            <div class="post-description clearfix">
                <div class="post-text-hld">
